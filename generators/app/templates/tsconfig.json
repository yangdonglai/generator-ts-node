{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution":"classic",
    "target": "es5",
    "lib": [
      "es2017"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "typing"
  },
  "include": [
    "src/**/*.ts"
  ],
  "filesGlob": [
    "**/*.ts",
    "!node_modules/**"
  ],
  "exclude": [
    "node_modules"
  ]
}